@model List<TVHS.ViewModels.ViewModelCheckBox>

@using (Html.BeginForm("BroadcastSchedule", "MakeSchedule"))
{
    <br/>
    <table>
        @for (var i = 0; i < Model.ToList().Count(); i++)
        {
            <tr>
                <td>
                    @Html.CheckBoxFor(it => it[i].Checked, new { Style = "vertical-align:3px}" })
                </td>
                <td width="20%">
                    @Html.HiddenFor(it => it[i].Id)
                    @Html.DisplayFor(it => it[i].ProgramCode)
                </td>
                <td width="70%">
                    @Html.DisplayFor(it => it[i].Name)
                </td>

            </tr>
        }
    </table>
    <input id="Submit1" type="submit" value="submit" />

}  